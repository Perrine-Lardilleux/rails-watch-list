<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://thumbs.dreamstime.com/z/cinema-film-background-camera-clapperboard-tickets-rolls-glasses-popcorn-lens-reel-film-soda-cinema-film-blue-background-118776533.jpg);">
  <div class="container d-flex justify-content-center">
    <h1>Save any kind of movies</h1>
  </div>
</div>


<div class="container d-flex justify-content-between mt-5">
  <h1>My Lists</h1>
  <%= link_to 'Create a new movie list', new_list_path, class: "btn btn-success" %>
</div>

<div class="row d-flex mt-3">
  <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card-category w-100 mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill if list.photo.attached?%>')">
            <%= link_to list.name, list %>
        </div>
      </div>
  <% end %>
</div>
