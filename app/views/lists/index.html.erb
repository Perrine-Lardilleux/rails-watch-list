<div class="container d-flex justify-content-between mt-5">
  <h1>My Lists</h1>
  <%= link_to 'Create a movie list', new_list_path, class: "btn btn-success" %>
</div>

<div class="content d-flex ml-5 mt-3">
  <% @lists.each do |list| %>
    <div class="cards">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to list.name, list %>
      </div>
    </div>
  <% end %>
</div>
