<h1><%= @list.name %></h1>

<br><br><%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<br><br><strong>Movies:</strong>
<% @list.movies.each do |movie| %>
  <div class="card" style="width: 18rem;">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"><%= movie.overview %></p>
      <% @list.bookmarks.each do |bookmark| %>
        <% if movie.id == bookmark.movie_id %>
          <%= bookmark.comment %>
          <%= link_to "Delete Bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>


